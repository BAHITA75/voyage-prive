{% extends 'base.html.twig' %}

{% block title %}
	Affichage du Voyage - Voyage-Privée
{% endblock %}

{% block body %}

	{% for voyage in singleVoyage %}

		<div class="container-fluid">
			<div class="row justify-content-evenly align-items-center">
				<div class="col-md-6">
					<div class="card">
						<div class="card-content">
							<div class="card-body">
								<img width="580px" src="{{ asset('uploads/' ~ voyage.picture)}}" alt="image">
							</div>
						</div>
					</div>
				</div>

				<div class="col-md-4">
					<h3 class="text-center">{{voyage.villeDepart}}
						-->
						{{voyage.destination}}</h3>
					<h5 class="text-center">{{voyage.dureeSejour}}
						nuits /
						{{voyage.prix}}
						€</h5>
					<br><br>
					<p>{{voyage.description}}</p>
				</div>


			</div>
		</div>
	{% endfor %}

{% endblock %}
